# Docker environment variables
# Copy this file to .env and fill in the values

# Application
SECRET_KEY=change-this-to-a-random-string-at-least-32-chars
JWT_SECRET_KEY=change-this-to-another-random-string-at-least-32-chars
FRONTEND_URL=https://financeclinics.com

# Database
MYSQL_ROOT_PASSWORD=secure-root-password
MYSQL_DATABASE=financeclinics
MYSQL_USER=financeclinics
MYSQL_PASSWORD=secure-db-password

# Email (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@financeclinics.com

# Admin
ADMIN_EMAIL=admin@financeclinics.com
NOTIFICATION_EMAIL=notifications@financeclinics.com

# Frontend build
VITE_API_URL=/api
