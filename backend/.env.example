# FinanceClinics - Environment Configuration
# Copy this file to .env and update with your values

# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_HOURS=24

# Database - MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_db_user
MYSQL_PASSWORD=your_db_password
MYSQL_DATABASE=financeclinics

# Or use full DATABASE_URL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/financeclinics

# Email Configuration (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@financeclinics.com
ADMIN_EMAIL=admin@financeclinics.com

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://financeclinics.com

# Site Configuration
SITE_NAME=FinanceClinics
SITE_URL=https://financeclinics.com

# Google Analytics
GOOGLE_ANALYTICS_ID=

# Google reCAPTCHA (optional)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Redis URL (for rate limiting in production)
# REDIS_URL=redis://localhost:6379/0
